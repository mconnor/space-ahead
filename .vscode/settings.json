{
  "editor.formatOnSave": false,
  "editor.rulers": [80],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 180,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.css": "tailwindcss",
    "*.json": "jsonc"
  },

  // TailwindCSS Configuration
  "tailwindCSS.includeLanguages": {
    "plaintext": "tailwindcss",
    "astro": "html"
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "class:list",
    "tw",
    "twx"
  ],
  "tailwindCSS.classFunctions": ["tw", "clsx"],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.files.exclude": ["**/node_modules/**", "**/dist/**"],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.validate": true,
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "warning",
  "tailwindCSS.lint.cssConflict": "warning",
  "emmet.includeLanguages": {
    "plaintext": "tailwindcss",
    "astro": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "vue-html": "html",
    "svelte": "html",
    "preact": "html",
    "markdown": "html",
    "postcss": "css"
  },
  "javascript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[css]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact",
    "preact",
    "toml"
  ],
  "breadcrumbs.filePath": "on",

  // Enhanced file nesting for monorepo structure
  // "explorer.compactFolders": false,
  // "explorer.fileNesting.enabled": true,
  // "explorer.fileNesting.expand": true,
  // "explorer.fileNesting.patterns": {
  //   "*.ts": "${capture}.d.ts,${capture}.test.ts,${capture}.spec.ts",
  //   "*.tsx": "${capture}.test.tsx,${capture}.spec.tsx",
  //   "*.vue": "${capture}.test.ts,${capture}.spec.ts",
  //   "*.svelte": "${capture}.test.ts,${capture}.spec.ts",
  //   "*.astro": "${capture}.test.ts,${capture}.spec.ts",
  //   "package.json": "package-lock.json,pnpm-lock.yaml,yarn.lock",
  //   "tailwind.config.*": "tailwind.config.*,postcss.config.*"
  // },

  "editor.parameterHints.enabled": false,
  "editor.lineNumbers": "off",
  "explorer.incrementalNaming": "simple",

  // Explorer icon settings - make icons larger and more visible
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "always",
  "explorer.decorations.colors": true,
  "explorer.decorations.badges": true,

  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "/Users/mikeconnor/.local/share/mise/shims/node"
  },
  "editor.inlineSuggest.enabled": false,
  // GitHub Copilot settings
  "github.copilot.enable": {
    "markdown": true,
    "plaintext": false,
    "zod": true,
    "astro": true,
    "react": true,
    "preact": true,
    "svelte": true,
    "vue": true,
    "javascript": true,
    "typescript": true,
    "typescriptreact": true,
    "json": true,
    "jsonc": true,
    "yaml": true
  },

  // Support for Node.js subpath imports with # prefix
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.importModuleSpecifierEnding": "js",

  // Monorepo workspace settings
  // "typescript.tsdk": "node_modules/typescript/lib",
  // "typescript.enablePromptUseWorkspaceTsdk": true,
  // "typescript.preferences.preferTypeOnlyAutoImports": true,

  // Zod schema development
  "editor.quickSuggestions": {
    "strings": true
  },

  // Framework-specific settings
  "svelte.enable-ts-plugin": true,

  // Search Configuration - Files to exclude from searches
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/.astro": true,
    "**/coverage": true,
    "**/.nyc_output": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/pnpm-lock.yaml": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/*.min.js": true,
    "**/*.min.css": true,
    "**/vendor": true,
    "**/.cache": true,
    "**/.temp": true,
    "**/.tmp": true,
    "**/logs": true,
    "**/*.log": true
  },

  // Files to exclude from the file explorer
  // Note: This completely overrides user settings, doesn't merge with them
  "files.exclude": {
    // Version control (hide these)
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    // System files (hide these)
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    // Dependencies and build outputs (keep visible for debugging)
    "**/node_modules": false,
    "**/.next/**": false,
    "**/.turbo/**": false,
    "**/.vercel/**": false,
    "**/.astro": false,
    "**/.svelte-kit/**": false,
    "**/coverage/**": false,
    "./pnpm-lock.yaml": false,
    // Cache and temp files (hide these)
    "**/.cache": true,
    "**/.temp": true,
    "**/.tmp": true
  },

  // Files to exclude from file watchers (performance)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.nuxt/**": true,
    "**/.astro/**": true,
    "**/coverage/**": true,
    "**/.nyc_output/**": true,
    "**/logs/**": true,
    "**/*.log": true
  },
  "chat.mcp.discovery.enabled": {
    "claude-desktop": true,
    "windsurf": true,
    "cursor-global": true,
    "cursor-workspace": true
  }
}
