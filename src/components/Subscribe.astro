---
import Button from "./Button.astro";
import siteConfig from "../site.config";

const subscribe = siteConfig.subscribe;

const { class: className } = Astro.props;
---

{
  subscribe?.formUrl && (
    <section
      id="subscribe"
      class:list={[
        "flex flex-col items-center rounded-2xl border border-dashed border-gray-500 p-8 text-center",
        className,
      ]}
    >
      {subscribe.title && (
        <h2
          class:list={[
            "sigmar-ff w-full max-w-xl leading-tight font-medium",
            subscribe.text ? "mb-4" : "mb-8",
          ]}
        >
          {subscribe.title}
        </h2>
      )}
      {subscribe.text && (
        <p class="mb-8 w-full max-w-xl text-sm leading-normal text-balance">
          {subscribe.text}
        </p>
      )}
      <form
        action={subscribe.formUrl}
        method="post"
        id="subscribe-form"
        name="subscribe-form"
        class="flex w-full max-w-xl flex-col gap-3.5 sm:flex-row"
        target="_blank"
      >
        <label for="email" class="sr-only">
          Email Address
        </label>
        <input
          type="email"
          name="email"
          id="email"
          class="kanit-light h-9 w-full rounded-full bg-transparent px-5 py-2 text-sm outline-1 outline-gray-500 placeholder:text-gray-500/50 focus:outline-space-red dark:placeholder:text-gray-300/50 dark:focus:outline-space-yellow"
          required=""
          value=""
          placeholder="Your email"
        />
        <Button
          type="submit"
          name="subscribe"
          class="space-btn-outlined h-9 w-full sm:w-auto"
        >
          Subscribe
        </Button>
      </form>
    </section>
  )
}
