---
import IconButton from "./IconButton.astro";
import ArrowLeft from "../icons/ArrowLeft.astro";
import ArrowRight from "../icons/ArrowRight.astro";

const { page, class: className } = Astro.props;
---

<nav
  aria-label="Pagination"
  class:list={[
    "flex min-w-full items-center gap-8 p-4 sm:justify-center",
    className,
  ]}
>
  <IconButton
    class="disabled:fill-gray-500 disabled:hover:cursor-not-allowed disabled:hover:text-gray-500!"
    href={page.url.prev}
    aria-label={`Go to page ${page.currentPage - 1} of ${page.lastPage}`}
    disabled={!page.url.prev}
  >
    <ArrowLeft class="h-5 w-5 fill-current" />
  </IconButton>
  <span class="text-sm" aria-current="page"
    >Page {page.currentPage} of {page.lastPage}</span
  >
  <IconButton
    class="disabled:fill-gray-500 disabled:hover:cursor-not-allowed disabled:hover:text-gray-500!"
    href={page.url.next}
    aria-label={`Go to page ${page.currentPage + 1} of ${page.lastPage}`}
    disabled={!page.url.next}
  >
    <ArrowRight class="h-5 w-5 fill-current" />
  </IconButton>
</nav>
